/* component/kfc-card/kfc-card.wxss */

.container {
  width: 316rpx;
  padding: 20rpx 0;
  text-align: center;
  margin: 0 0 10rpx 40rpx;
  box-shadow: 0px 15px 10px -9px rgba(51, 51, 51, 0.1);
  position: relative;
  color: #da4949;
  font-size: 8pt;
  /* font-weight: bold */
}

.pic-before {
  position: absolute;
  top: 80rpx;
  left: 10rpx;
}

.price {
  font-size: 40pt;
  display: inline-block;
  padding-top: -50%;
  align-self: center;
  flex: 1
}

.pic-after {
  position: absolute;
  right: 20rpx;
  top: 50rpx;
}

.container-pic {
  width: 316rpx;
  height: 188rpx;
  margin-top: 20rpx;
  background-size: 100%;
  display: flex

}

.con-intro {
  display: flex;
  justify-content: space-between;
  font-size: 10pt;
}

.con-tit {
  color: #303030;
  margin-right: 23rpx;
  font-size: 8pt;
}

.con-price {
  display: flex;
  align-items: flex-end;
  font-size: 8pt;
}

.con-nowpic {
  color: #da4949;
}

.con-bepic {
  font-size: 8pt;
  color: #707070;
  text-decoration: line-through;
}

.con-by {
  font-size: 7pt;
  color: #646464;
  margin-top: 20rpx;
}
