/* component/comedy-card/comedy-card.wxss */
.container {
    width:316rpx;
    padding:20rpx 0;
    text-align:center;
    margin: 0 0 10rpx 40rpx;
    box-shadow:0px 15px 10px -9px rgba(51,51,51,.1);
}
.container-pic {
    width: 316rpx;
    height: 188rpx;
    margin-top: 20rpx;
}
.con-intro {
    display: flex;
    justify-content: space-between;
    font-size: 10pt;
}
.con-tit {
    color: #303030;
    margin-right: 23rpx;
}
.con-price {
    display: flex;
    align-items: flex-end;
}
.con-nowpic {
    color: #da4949;
}
.con-bepic {
    font-size: 8pt;
    color: #707070;
    text-decoration: line-through;
}
.con-by {
    font-size: 8pt;
    color: #646464;
    margin-top: 20rpx;
}